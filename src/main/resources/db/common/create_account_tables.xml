<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <!-- Role 表 -->
    <changeSet id="1" author="wen">
        <createTable tableName="role">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(50)" />
            <column name="description" type="VARCHAR(200)" />
        </createTable>
    </changeSet>
    <!-- authority權限表 -->
    <changeSet id="2" author="wen">
        <createTable tableName="authority">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(50)" />
            <column name="description" type="VARCHAR(200)" />
        </createTable>
    </changeSet>
    <changeSet id="3" author="wen">
        <createTable tableName="role_authority">
            <column name="role_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="authority_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="3-1" author="wen">
        <addForeignKeyConstraint baseTableName="role_authority"
                                 baseColumnNames="role_id"
                                 referencedTableName="role"
                                 referencedColumnNames="id"
                                 constraintName="fk_role_authority_role"/>
        <addForeignKeyConstraint baseTableName="role_authority"
                                 baseColumnNames="authority_id"
                                 referencedTableName="authority"
                                 referencedColumnNames="id"
                                 constraintName="fk_role_authority_authority"/>
    </changeSet>
    <!-- Account 表 -->
    <changeSet id="4" author="wen">
        <createTable tableName="account">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(50)" />
            <column name="gender" type="VARCHAR(10)" />
            <column name="telephone" type="VARCHAR(20)" />
            <column name="address" type="VARCHAR(100)" />
            <!-- ✅ 新增 password 欄位 -->
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <!-- ✅ 新增 enabled 欄位 -->
            <column name="enabled" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="role_id" type="BIGINT" />
        </createTable>

        <!-- 外鍵獨立 changeSet 或放在這裡 -->
        <addForeignKeyConstraint baseTableName="account"
                                 baseColumnNames="role_id"
                                 referencedTableName="role"
                                 referencedColumnNames="id"
                                 constraintName="fk_account_role"/>
    </changeSet>
</databaseChangeLog>